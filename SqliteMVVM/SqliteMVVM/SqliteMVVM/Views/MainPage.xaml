<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqliteMVVM.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bienvenido a Sistema Empleados!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button x:Name="btn_crear" Clicked="btn_crear_Clicked" Text="Agregar Empleado"/>
        <Button x:Name="btn_listado" Clicked="btn_listado_Clicked" Text="Ver lista de Empleados"/>
        <Button x:Name="btn_editar" Clicked="btn_editar_Clicked" Text="Editar/Eliminar Empleados"/>
    </StackLayout>

</ContentPage>
